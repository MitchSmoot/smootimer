<div class="container timer-body">
  <div class= "card text-center">
    <h1><%= $current_event %> Timer</h1>  
    <timeDisplay class="timer-display">00:00:00</timeDisplay>
    <div>
      <input type="button" id="timerButton" value="Start" class="timer-button">
    </div>
    <div>
      <p>
        <%= @current_scramble %>
      </p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8">
      <div id="chart-container" style="min-width: 310px; height: 400px; max-width: 800px; margin: 0 auto">      
      </div>
    </div>
    <div class="col-md-4">
      <div class="card timer-panel-left">
        <h4>Previous Time: <b><%= format_milliseconds(SingleSolve.last.solve_time) %></b></h4>
        <% if @list_solves %>
          <table>
            <th>#</th>
            <th>Time</th>
            <th>Delete</th>
          <% @list_solves.each do |t| %>
            <tr>
              <td><%= t.id %></td>
              <td><%= format_milliseconds(t.solve_time) %></td>
              <td><%= link_to 'X', single_solf_path(t), :confirm => 'You sure?', :method => :delete %></td>
            </tr>
          <% end %>
          </table>
        <% else %>
          <div>
            <p>You have not yet recorded any solves in this event</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

